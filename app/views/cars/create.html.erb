<form action="/cars/create" method="get">
    <label for="make_id">Car make: </label>
    <input type="text" name="make" id="make_id" required />
    <label for="modelyear_id">Car model year: </label>
    <input type="text" name="modelyear" id="modelyear_id" required />
    <label for="color_id">Car Color: </label>
    <input type="color" name="color" id="color_id" />
    <input type="submit" value="Create" />
</form>
